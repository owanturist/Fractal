{
  "compilerOptions": {
    "allowJs": false,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es3",
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "typings/main",
    "typings/main.d.ts"
  ]
}
